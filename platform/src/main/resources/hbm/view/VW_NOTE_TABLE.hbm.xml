<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class entity-name="VwNoteTable" table="VW_NOTE_TABLE">
    <cache usage="read-write" />
    <comment>公告视图模块</comment>

    <id name="viewKey" type="java.lang.String">
      <column name="VIEW_KEY" length="100" not-null="true">
        <comment>主键KEY</comment>
      </column>
    </id>

    <property name="tableName" type="java.lang.String">
      <column name="TABLE_NAME" length="100" not-null="true">
        <comment>表名</comment>
      </column>
    </property>

    <property name="busiName" type="java.lang.String">
      <column name="BUSI_NAME" length="200" not-null="true">
        <comment>展示名</comment>
      </column>
    </property>

    <set name="limits" inverse="true" cascade="all" lazy="false" order-by="sort asc">
      <cache usage="read-write" />
      <comment>数据限制列表</comment>
      <key>
        <column name="VIEW_KEY" />
      </key>
      <one-to-many entity-name="VwNoteLimit" />
    </set>

    <property name="createDate" type="java.util.Date">
      <column name="CREATE_DATE" length="23" not-null="true">
        <comment>创建时间</comment>
      </column>
    </property>

    <property name="updateDate" type="java.util.Date">
      <column name="UPDATE_DATE" length="23" not-null="true">
        <comment>更新时间</comment>
      </column>
    </property>

  </class>

  <!-- 数据筛选 -->
  <class entity-name="VwNoteLimit" table="VW_NOTE_LIMIT">
    <cache usage="read-write" />
    <comment>动态表数据约束规则</comment>

    <id name="id" type="java.lang.Long">
      <column name="ID" length="12" not-null="true">
        <comment>自动主键</comment>
      </column>
      <generator class="increment"></generator>
    </id>

    <property name="viewKey" type="java.lang.String">
      <column name="VIEW_KEY" length="100" not-null="true">
        <comment>主键KEY</comment>
      </column>
    </property>

    <property name="description" type="java.lang.String">
      <column name="DESCRIPTION" length="500" not-null="true">
        <comment>描述</comment>
      </column>
    </property>

    <property name="sqlType" type="java.lang.Integer">
      <column name="SQL_TYPE" length="8" not-null="true">
        <comment>内容脚本类型</comment>
      </column>
    </property>

    <property name="sqlScript" type="text">
      <column name="SQL_SCRIPT"  not-null="true">
        <comment>内容脚本</comment>
      </column>
    </property>

    <property name="sort" type="java.lang.Integer">
      <column name="SORT" length="8" not-null="true">
        <comment>排序</comment>
      </column>
    </property>

    <many-to-one name="pri" class="com.riversoft.platform.po.CmPri"
      cascade="all" lazy="false">
      <column name="PRI" length="100" not-null="true">
        <comment>权限资源</comment>
      </column>
    </many-to-one>

  </class>
</hibernate-mapping>
