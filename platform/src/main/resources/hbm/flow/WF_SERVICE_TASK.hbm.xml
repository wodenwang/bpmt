<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class entity-name="WfServiceTask" table="WF_SERVICE_TASK">
    <cache usage="read-write" />
    <comment>自动服务配置</comment>

    <composite-id>
      <key-property name="pdId" type="java.lang.String">
        <column name="PD_ID" length="100" not-null="true">
          <comment>流程定义ID</comment>
        </column>
      </key-property>
      <key-property name="activityId" type="java.lang.String">
        <column name="ACTIVITY_ID" length="100" not-null="true">
          <comment>节点ID</comment>
        </column>
      </key-property>
    </composite-id>

    <property name="description" type="java.lang.String">
      <column name="DESCRIPTION" length="500">
        <comment>描述</comment>
      </column>
    </property>

  </class>

  <class entity-name="WfServiceTaskLogic" table="WF_SERVICE_TASK_LOGIC">
    <cache usage="read-write" />
    <comment>自动处理逻辑</comment>

    <id name="id" type="java.lang.Long">
      <column name="ID" length="12" not-null="true">
        <comment>自动主键</comment>
      </column>
      <generator class="increment"></generator>
    </id>

    <property name="pdId" type="java.lang.String">
      <column name="PD_ID" length="100" not-null="true">
        <comment>流程定义ID</comment>
      </column>
    </property>

    <property name="activityId" type="java.lang.String">
      <column name="ACTIVITY_ID" length="100" not-null="true">
        <comment>流程定义ID</comment>
      </column>
    </property>

    <property name="logicType" type="java.lang.Integer">
      <column name="LOGIC_TYPE" length="8" not-null="true">
        <comment>处理逻辑(脚本类型)</comment>
      </column>
    </property>

    <property name="logicScript" type="text">
      <column name="LOGIC_SCRIPT"  not-null="true">
        <comment>处理逻辑(脚本)</comment>
      </column>
    </property>

    <!-- 0:忽略错误,跳过;1:回滚事务. -->
    <property name="errorType" type="java.lang.Integer">
      <column name="ERROR_TYPE" length="8" not-null="true">
        <comment>错误处理方式</comment>
      </column>
    </property>

    <property name="description" type="java.lang.String">
      <column name="DESCRIPTION" length="500">
        <comment>描述</comment>
      </column>
    </property>

    <property name="sort" type="java.lang.Integer">
      <column name="SORT" length="8" not-null="true">
        <comment>排序</comment>
      </column>
    </property>
  </class>

</hibernate-mapping>
