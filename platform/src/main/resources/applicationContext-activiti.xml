<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!--UUID生成器 -->
  <bean id="uuidGenerator" class="org.activiti.engine.impl.persistence.StrongUuidGenerator" />

  <!-- 工作流配置 -->
  <bean id="processEngineConfiguration" class="org.activiti.spring.SpringProcessEngineConfiguration">
    <!-- 数据源和事务管理器继承于applicationContext-hibernate.xml -->
    <property name="dataSource" ref="dataSource" />
    <property name="transactionManager" ref="transactionManager" />
    <property name="databaseSchemaUpdate" value="true" />
    <property name="jobExecutorActivate" value="false" />
    <property name="history" value="none" />
    <property name="activityFontName">
      <value>#{config['activiti.font']!=null?config['activiti.font']:'黑体'}</value>
    </property>
    <property name="labelFontName">
      <value>#{config['activiti.font']!=null?config['activiti.font']:'黑体'}</value>
    </property>
    <property name="dbHistoryUsed" value="false"></property>
    <property name="dbIdentityUsed" value="false"></property>
    <property name="idGenerator" ref="uuidGenerator" />
    <!-- 自定组织架构模型 -->
    <property name="customSessionFactories">
      <list>
        <bean class="com.riversoft.flow.identity.CustomGroupManagerFactory" />
      </list>
    </property>
  </bean>

  <!-- 流程引擎 -->
  <bean id="processEngine" class="org.activiti.spring.ProcessEngineFactoryBean" destroy-method="destroy">
    <property name="processEngineConfiguration" ref="processEngineConfiguration" />
  </bean>
</beans>