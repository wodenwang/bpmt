<project name="copyToH2" default="default" basedir=".">

	<import file="${basedir}/dbbase.xml" />

	<path id="h2.path">
		<pathelement location="${installation.tools.h2copy.dir}"/>
	</path>

	<target name="showhelp">
		<echo message="使用说明:" />
		<echo message="0.本工具将会拷贝系统数据库到H2." />
		<echo message="1.生成的H2数据文件将会放在tools\db\h2目录." />
		<echo message="2.更多信息请参阅文档." />
	</target>
	
	<target name="maintarget">
		<pathconvert property="jdbcpath" refid="tools.jdbc.properties.path"/>
		<pathconvert property="h2Path" refid="h2.path"/>
		
		<River-DB-Copy jdbcConf="file:///${jdbcpath}" fromH2="false" h2Path="${h2Path}"/>
	</target>

</project>