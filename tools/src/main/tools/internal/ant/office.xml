<project name="office" default="default" basedir=".">

    <import file="${basedir}/common.xml" />

    <property name="network.settings.file" value="${installation.conf.dir}/network.properties"/>

    <target name="showhelp">
        <echo message="使用说明:" />
        <echo message="0.本工具用于Office服务的管理。" />
        <echo message="1.更多信息请参阅文档。" />
    </target>

    <target name="-init">
        <antcall target="showhelp" />
    </target>

    <target name="default" depends="-init" description="Default target.">
        <River-Office command="${office-command}" installationRoot="${installation.dir}"/>
    </target>
</project>