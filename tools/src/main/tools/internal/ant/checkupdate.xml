<project name="checkupdate" default="default" basedir=".">

	<import file="${basedir}/common.xml" />

	<macrodef name="check-update">
		<sequential>
			<River-PatchDownload installationRoot="${installation.dir}"/>
		</sequential>
	</macrodef>

	<target name="showhelp">
		<echo message="使用说明:" />
		<echo message="0.本工具用于检查BPMT Tools 是否有可用的更新。" />
		<echo message="1.如果有可用的更新，软件将从BPMT Tools 云端下载可用的更新并存放于 upgrade 目录。" />
		<echo message="2.更多信息请参阅文档。" />
	</target>

	<target name="-init">
		<antcall target="showhelp" />
	</target>

	<target name="default" depends="-init" description="Default target.">
		<check-update />
	</target>
</project>